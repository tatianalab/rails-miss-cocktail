<!DOCTYPE html>
<html>
  <head>
    <title>RailsMissCocktail</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
    <div class="banner">
      <div class="container">
        <div class="d-flex align-items-center justify-content-between">
          <div class="col-8 d-flex align-items-start">
           <h1>Miss</br><span class="logo-blue">Cocktail</span></h1>,
          <%= image_tag "logo.png", alt: "logo", width: 100%><%= link_to 'all cocktails' , cocktails_path %>
          </div>

          <div class="col-4 d-flex justify-content-end">
          <div class="btn-yellow">
            <%= link_to "New cocktail", new_cocktail_path %>
          </div>
          </div>
        </div>
      </div>
    </div>

    <%= yield %>
  </body>
</html>


