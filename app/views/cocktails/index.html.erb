<div class="container">

  <div class="row pr-4 pl-4 pt-4 pb-4">
      <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-md-4 mb-3">
      <%= cl_image_tag cocktail.photo.key, height: 200, width: 300, crop: :fill %>
      <div class="card-body">
      <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail)%></h5>
      <%= link_to "See recipe", cocktail_path(cocktail)%>
      </div>
    </div>
      <% end %>


  </div>

</div>
