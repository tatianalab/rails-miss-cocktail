<div class="container">

  <div class="row pr-4 pl-4 pt-4 pb-4">
      <% @cocktails.each do |cocktail| %>
    <div class="col-12 col-md-4 mb-3">
      <div class="card">
        <%= cl_image_tag cocktail.photo.key,crop: :fit, class:"card-img" %>
          <div class="card-body">
            <h5 class="card-title"><%= link_to cocktail.name, cocktail_path(cocktail)%></h5>
            <%= link_to "See recipe", cocktail_path(cocktail), class:"btn-card" %>
            <p class="text-center">
            <i class="fas fa-heart text-primary">Like</i>
            </p>
          </div>
        </div>
    </div>
        <% end %>


  </div>

</div>
